    <!-- =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=- -->
    <!-- Package stuff into JARs and so forth.                          -->
    <!-- =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=- -->
    <target name="package"
            depends="build"
            unless="jarIsCurrent"
            description="Performs all compilation steps, then packages the results.">

        <jar destfile="lib/KETL.jar">
            <manifest>
                <attribute name="Main-Class" value=""/>
                <attribute name="Implementation-Vendor" value="Kinetic Networks Inc"/>
                <attribute name="Implementation-Version" value="$$Name:  $$"/>
                <attribute name="Implementation-Title" value="KETL ETL System"/>
            </manifest>

            <fileset dir="build" >
			    <exclude name="**/postgresql/*"/>
			    <exclude name="**/oracle/*"/>
                <exclude name="**/*SOAP*"/>
                <exclude name="**/FastLoad*"/>
                <exclude name="**/*XMLToFieldsTransformation*"/>
                <exclude name="**/*XMLReader*"/>
            </fileset>
        </jar>


        <jar destfile="lib/KETLPostGreExt.jar">
            <manifest>
                <attribute name="Main-Class" value=""/>
                <attribute name="Implementation-Vendor" value="Kinetic Networks Inc"/>
                <attribute name="Implementation-Version" value="$$Name:  $$"/>
                <attribute name="Implementation-Title" value="KETL PostgreSQL extensions"/>
            </manifest>

            <fileset dir="build" >
			    <include name="**/postgresql/*"/>
            </fileset>
        </jar>
        
         <jar destfile="lib/KETLOracleExt.jar">
            <manifest>
                <attribute name="Main-Class" value=""/>
                <attribute name="Implementation-Vendor" value="Kinetic Networks Inc"/>
                <attribute name="Implementation-Version" value="$$Name:  $$"/>
                <attribute name="Implementation-Title" value="KETL Oracle extensions"/>
            </manifest>

            <fileset dir="build" >
			    <include name="**/oracle/*"/>
            </fileset>
        </jar>
        
        
        <jar destfile="lib/KETLSOAPExt.jar">
            <manifest>
                <attribute name="Main-Class" value=""/>
                <attribute name="Implementation-Vendor" value="Kinetic Networks Inc"/>
                <attribute name="Implementation-Version" value="$$Name:  $$"/>
                <attribute name="Implementation-Title" value="SOAP Components"/>
            </manifest>

            <fileset dir="build" >
			    <include name="**/*SOAP*"/>
            </fileset>
        </jar>
        <jar destfile="lib/KETLXMLExt.jar">
            <manifest>
                <attribute name="Main-Class" value=""/>
                <attribute name="Implementation-Vendor" value="Kinetic Networks Inc"/>
                <attribute name="Implementation-Version" value="$$Name:  $$"/>
                <attribute name="Implementation-Title" value="XML Components,with support for SAXON"/>
            </manifest>

            <fileset dir="build" >
			    <include name="**/*XMLToFieldsTransformation*"/>
			    <include name="**/*XMLReader*"/>
            </fileset>
        </jar>
    </target>



